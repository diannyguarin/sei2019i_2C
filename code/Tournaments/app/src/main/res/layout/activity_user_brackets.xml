<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:padding="5dp"
    tools:context=".Presentation.BracketsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="317dp"
            android:layout_height="298dp"
            android:layout_gravity="right"
            android:tint="#70FFFFFF"
            app:srcCompat="@drawable/orangecircle3" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="370dp"
            android:layout_height="519dp"
            android:layout_gravity="bottom"
            android:tint="#6BFFFFFF"
            app:srcCompat="@drawable/bluecircle3" />


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="145dp"
            android:layout_height="205dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/playoff" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="201dp"
            android:layout_height="172dp"
            android:layout_gravity="bottom|center"
            app:srcCompat="@drawable/estrategia" />

        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="552dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Brackets"
                android:textColor="@color/blueCorp"
                android:textSize="36sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="242dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="242dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bTournaments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tournaments" />

        </LinearLayout>


    </FrameLayout>
</android.support.constraint.ConstraintLayout>