<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.ListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clickable="true">

        //IMAGENES

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="222dp"
            android:layout_height="260dp"

            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/circuloorange" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="641dp"
            android:layout_height="379dp"
            android:layout_gravity="bottom|right"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:tint="#99FFFFFF"
            app:srcCompat="@drawable/orangecircle2" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="288dp"
            android:layout_height="262dp"

            android:layout_gravity="bottom|right"
            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/imagen3" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="699dp"
            android:layout_height="434dp"
            android:layout_gravity="end|left"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:tint="#B7FFFFFF"
            app:srcCompat="@drawable/bluecircle2" />


        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="201dp"
            android:layout_height="172dp"
            android:layout_gravity="bottom|center"
            app:srcCompat="@drawable/soccer_ball2" />

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="663dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="67dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/bBack"
            android:layout_width="50dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/backbutton" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_deletetour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Agregar miembro" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ListView_tour"
            android:layout_width="match_parent"
            android:layout_height="624dp"
            android:layout_margin="50dp"></ListView>

    </FrameLayout>

</RelativeLayout>