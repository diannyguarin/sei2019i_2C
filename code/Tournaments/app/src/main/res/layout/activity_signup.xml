<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.SignupActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="295dp"
            android:layout_height="328dp"

            android:tint="#90FFFFFF"
            app:srcCompat="@drawable/circuloorange" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="163dp"
            android:layout_height="159dp"


            android:tint="#1BFFFFFF"
            app:srcCompat="@drawable/imagen8" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="317dp"
            android:layout_height="302dp"

            android:layout_gravity="bottom|right"
            android:src="@drawable/imagen3"
            android:tint="#ADF5F8F8" />

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="628dp"

            android:layout_gravity="bottom|center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SING UP!"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Your Name" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nickname"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />



            <EditText
                android:id="@+id/et_password"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />



            <EditText
                android:id="@+id/et_password2"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Confim password" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="SAVE" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="186dp"
                android:layout_height="156dp"

                android:layout_gravity="right|bottom"
                app:srcCompat="@drawable/imagen7" />


        </LinearLayout>

        <ImageView
            android:id="@+id/bcancelReg"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingRight="8dp"
            app:srcCompat="@drawable/error" />


    </FrameLayout>

</RelativeLayout>