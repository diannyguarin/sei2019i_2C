<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Presentation.LoginActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="137dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="Administrator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="130dp"
        android:layout_height="93dp"

        android:layout_gravity="center_vertical"
        android:tint="#56FFFFFF"
        app:srcCompat="@drawable/imagen4" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="232dp"
        android:layout_height="523dp"

        android:layout_gravity="right|center"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@drawable/torneo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="190dp"
        android:layout_height="223dp"

        android:tint="#56FFFFFF"
        app:srcCompat="@drawable/circuloorange" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="165dp"
        android:layout_height="213dp"

        android:layout_gravity="center_horizontal"
        android:tint="#56FFFFFF"
        app:srcCompat="@drawable/imagen5" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="259dp"
        android:layout_height="240dp"

        android:layout_gravity="bottom|right"
        android:tint="#56FFFFFF"
        app:srcCompat="@drawable/imagen3" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="147dp"
        android:layout_height="134dp"

        android:layout_gravity="bottom|right"
        android:tint="#56FFFFFF"
        app:srcCompat="@drawable/imagen6" />

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="287dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:hint="Username"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="10"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_,.;:-+!*/#$%\{}[]/()=?¡¿'"
            android:maxLength="10"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <Button
            android:id="@+id/bLogin"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="LOGIN" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />


        <Button
            android:id="@+id/btn_gotosingup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sing Up" />

    </LinearLayout>


</FrameLayout>

</RelativeLayout>