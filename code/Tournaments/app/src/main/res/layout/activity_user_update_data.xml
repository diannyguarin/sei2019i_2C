<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Presentation.UpdateData">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    //IMAGENES

    <ImageView
        android:id="@+id/circle"
        android:layout_width="579dp"
        android:layout_height="337dp"
        android:layout_gravity="end|left"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:tint="#8AFFFFFF"
        app:srcCompat="@drawable/bluecircle2" />

    <ImageView
        android:id="@+id/bexit"
        android:layout_width="53dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:clickable="true"

        android:paddingTop="8dp"
        android:paddingRight="8dp"
        app:srcCompat="@drawable/error" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="138dp"
        android:layout_height="141dp"
        android:layout_gravity="left"
        app:srcCompat="@drawable/football" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="138dp"
        android:layout_height="141dp"
        android:layout_gravity="right|center_vertical"
        app:srcCompat="@drawable/silbato" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="539dp"
        android:layout_height="334dp"


        android:layout_gravity="bottom|right"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:tint="#51FFFFFF"
        app:srcCompat="@drawable/orangecircle2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="141dp"
        android:layout_height="143dp"
        android:layout_gravity="right|bottom"
        app:srcCompat="@drawable/corneta" />

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="588dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <TextView
            android:id="@+id/title"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Change Data"
            android:textColor="@color/orangeCorp"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />



        <EditText
            android:id="@+id/et_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="New Name"
            android:backgroundTint="@color/blueCorp"
            android:inputType="textVisiblePassword"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="10"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />



        <EditText
            android:id="@+id/et_username"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:inputType="textVisiblePassword"
            android:hint="New Username"
            android:backgroundTint="@color/orangeCorp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="10"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />



        <EditText
            android:id="@+id/et_password"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint="New Password"
            android:backgroundTint="@color/orangeCorp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_,.;:-+!*/#$%\{}[]/()=?¡¿'"
            android:maxLength="10"
            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change"
            android:textSize="24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <ImageView
            android:id="@+id/ImageViewdd"
            android:layout_width="138dp"
            android:layout_height="141dp"
            android:layout_gravity="bottom|left"
            app:srcCompat="@drawable/cronom" />


    </LinearLayout>


</FrameLayout>

</RelativeLayout>
