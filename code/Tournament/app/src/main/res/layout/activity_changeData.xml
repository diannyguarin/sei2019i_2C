<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tournaments.ui.ChDataActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        //IMAGENES

        <ImageView
            android:id="@+id/bcancelReg"
            android:layout_width="579dp"
            android:layout_height="337dp"
            android:layout_gravity="end|left"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:tint="#8AFFFFFF"
            app:srcCompat="@drawable/bluecircle2" />

        <ImageView
            android:id="@+id/bexit"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingRight="8dp"
            app:srcCompat="@drawable/error" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="138dp"
            android:layout_height="141dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/football" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="138dp"
            android:layout_height="141dp"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/silbato" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="539dp"
            android:layout_height="334dp"


            android:layout_gravity="bottom|right"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:tint="#51FFFFFF"
            app:srcCompat="@drawable/orangecircle2" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="141dp"
            android:layout_height="143dp"
            android:layout_gravity="right|bottom"
            app:srcCompat="@drawable/corneta" />

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="552dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="42dp" />

            <TextView
                android:id="@+id/title"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Cambiar Datos"
                android:textColor="@color/orangeCorp"
                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nuevo Nombre" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nuevo Username" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nueva ContraseÃ±a" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/bUpdate"
                android:layout_width="132dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:text="Actualizar" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="138dp"
                android:layout_height="141dp"
                android:layout_gravity="bottom|left"
                app:srcCompat="@drawable/cronom" />

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>
