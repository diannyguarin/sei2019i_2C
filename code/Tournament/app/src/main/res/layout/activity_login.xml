<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="93dp"

            android:layout_gravity="center_vertical"
            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/imagen4" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="232dp"
            android:layout_height="523dp"

            android:layout_gravity="right|center"
            android:foregroundGravity="center_vertical"
            app:srcCompat="@drawable/torneo" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="190dp"
            android:layout_height="223dp"

            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/circuloorange" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="165dp"
            android:layout_height="213dp"

            android:layout_gravity="center_horizontal"
            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/imagen5" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="259dp"
            android:layout_height="240dp"

            android:layout_gravity="bottom|right"
            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/imagen3" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="147dp"
            android:layout_height="134dp"

            android:layout_gravity="bottom|right"
            android:tint="#56FFFFFF"
            app:srcCompat="@drawable/imagen6" />

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="287dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etName"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Username" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Password" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <Button
                android:id="@+id/bLogin"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="LOGIN" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/tregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp"
                android:clickable="true"
                android:text="Â¿Registrarse?" />

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>