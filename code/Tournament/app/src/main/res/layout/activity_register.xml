<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tournaments.ui.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="295dp"
            android:layout_height="328dp"

            android:tint="#90FFFFFF"
            app:srcCompat="@drawable/circuloorange" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="163dp"
            android:layout_height="159dp"


            android:tint="#1BFFFFFF"
            app:srcCompat="@drawable/imagen8" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="317dp"
            android:layout_height="302dp"

            android:layout_gravity="bottom|right"
            android:src="@drawable/imagen3"
            android:tint="#ADF5F8F8" />

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="628dp"

            android:layout_gravity="bottom|center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="REGISTRATE!"
                android:textAlignment="center"
                android:textColor="@color/blueCorp"
                android:textSize="36sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tu Nombre" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Nickname" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Contraseña:" />

            <EditText
                android:id="@+id/etPassword1"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Password" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Confirmar contraseña:" />

            <EditText
                android:id="@+id/etPassword2"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Password" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <Button
                android:id="@+id/bRegister"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"

                android:text="Registrarse" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="186dp"
                android:layout_height="156dp"

                android:layout_gravity="right|bottom"
                app:srcCompat="@drawable/imagen7" />


        </LinearLayout>

        <ImageView
            android:id="@+id/bcancelReg"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingRight="8dp"
            app:srcCompat="@drawable/error" />


    </FrameLayout>

</RelativeLayout>